@tailwind base;
@tailwind components;
@tailwind utilities;

* {
	text-shadow: -1px 0px red, 1px 0px lime, 0px -1px blue;
}

h1,
h2,
h3,
h4 {
	text-shadow: -2px 0px red, 2px 0px lime, 0px -2px blue;
}

svg {
filter: drop-shadow(2px 0px 0px lime) drop-shadow(-2px 0px 0px red) drop-shadow(0px -2px 0px blue);
}

html,
body {
	@apply h-full overflow-hidden text-white;
	background: rgba(18, 18, 18, 1);
}
